/* ==========================
   HEADER ASTDX
========================== */
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 30px;
  background: linear-gradient(90deg, #111322, #1c1f34);
   
  position: sticky;
  top: 0;
  z-index: 1000;
}

header h1 {
  font-size: 1.8rem;
  font-weight: bold;
  color: #ff8700;
  text-transform: uppercase;
  text-shadow: 0px 0px 8px rgba(255, 135, 0, 0.7);
}

header nav {
  display: flex;
  gap: 5rem;
}

header nav a {
  font-size: 1.3rem;
  color: #f1f1f1;
  text-decoration: none;
  text-transform: uppercase;
  position: relative;
  padding: 5px 0;
}

header nav a::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  height: 2px;
  background-color: #ff8700;
  width: 0;
  transition: width 0.3s;
}

header nav a:hover {
  color: #ff8700;
  transform: scale(1.1);
  transition: transform ease 0.6s;
  text-shadow: 0px 0px 8px rgba(255, 135, 0, 0.7);
}

header nav a:hover::after {
  width: 100%;
}
header img{
	width: 20%;
}

