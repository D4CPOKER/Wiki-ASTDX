/* css/style.css */
body, html{
	height: 100%;
}
body {
  margin: 0;
  background-color: #0e0e0e;
  color: #f5f5f5;
  font-family: 'Segoe UI', Tahoma, sans-serif;
}

main {
  padding: 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 54.5vh;
  
}

.tabs {
  display: flex;
  gap: 2rem;
  margin-bottom: 1.5rem;
  justify-content: center;
}

.tab-link {
  font-weight: 600;
  font-size: 1rem;
  color: #aaa;
  cursor: pointer;
  position: relative;
  padding-bottom: 4px;
}

.tab-link:hover,
.tab-link.active {
  color: #fff;
}

.tab-link.active::after {
  content: "";
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: #76ff03;
  border-radius: 2px;
}

.tier-container {
  display: none;
  flex-direction: column;
  gap: 0.5rem;
  width: 100%;
  max-width: 1150px;
}

.tier-container.active {
  display: flex;
}

.custom-tier {
  display: flex;
  background-color: #1a1a1a;
  border: 1px solid #333;
  border-radius: 8px;
  min-height: 120px;
}

.custom-tier-label {
  background-color: #444;
  color: #fff;
  font-weight: bold;
  font-size: 0.9rem;
  padding: 0.5rem 0.5rem;
  min-width: 130px;
  min-height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  white-space: nowrap;
  border-radius:8px;
  border: 1px solid #333;
}

.custom-tier-content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 0;
  gap: 0;
  flex: 1;
  background-color: #111;
  margin-left:1%;
  border-radius:8px;
}

.custom-tier-content img {
  width: 100px;
  height: 100px;
  object-fit: cover;
  margin: 0;
  border: none;
  transition: all 0.2s ease-in-out;
}

.custom-tier-content img:hover {
  transform: scale(1.07);
  z-index: 2;
}

.character {
  position: relative;
  display: inline-block;
}

.detailed-tooltip {
  visibility: hidden;
  opacity: 0;
  width: 270px;
  background-color: #1e1e1e;
  color: #fff;
  padding: 12px;
  border-radius: 10px;
  position: absolute;
  bottom: 110%;
  left: 50%;
  transform: translatex(-50%);
  transform: translateY(140%);
  z-index: 999;
  transition: opacity 0.3s ease;
  border: 2px solid gold;
  box-shadow: 0 0 12px rgba(255, 215, 0, 0.5);
  font-size: 13px;
  text-align: left;
}

.character:hover .detailed-tooltip {
  visibility: visible;
  opacity: 1;
}

.detailed-tooltip h3 {
  margin: 0 0 5px 0;
  font-size: 15px;
  color: #fdd835;
}

.detailed-tooltip .rarity.mythical {
  color: #ff66cc;
  font-weight: bold;
}

.detailed-tooltip .type.magic {
  color: #4fc3f7;
}

.detailed-tooltip .type.dark {
  color: #b39ddb;
}

.detailed-tooltip .meta-tag {
  background: linear-gradient(90deg, #ffecb3, #ffe082);
  color: black;
  font-weight: bold;
  padding: 4px 8px;
  border-radius: 6px;
  margin: 5px 0;
  text-align: center;
}

.detailed-tooltip .desc {
  margin: 6px 0;
  font-size: 12.5px;
  color: #ccc;
}

.detailed-tooltip .stats {
  margin: 6px 0;
  font-size: 12px;
}

.detailed-tooltip .highlight {
  color: #76ff03;
  font-weight: bold;
}

.detailed-tooltip .cost {
  color: #ffca28;
}

.detailed-tooltip .recs {
  margin-top: 5px;
  font-size: 12px;
}